<%- layout('layouts/main') %>

<div class="card shadow-sm rounded">
  <div class="card-header bg-dark">
    <h4 class="card-title text-white m-0">
      <i class="fas fa-image mr-2"></i>
      Upload an image
    </h4>
  </div>
  <div class="card-body">
    <form action="/images" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroupFile"
              aria-describedby="inputGroupFileAddon" required />
            <label class="custom-file-label" for="inputGroupFile">Choose file</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <input type="text" name="title" class="form-control" placeholder="Title for the Image" required>
      </div>
      <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Description for the Image"
          required></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success rounded-sm">
          <i class="fa fa-upload"></i> Upload Image
        </button>
      </div>
    </form>
  </div>
</div>

<div class="card mt-4 shadow-sm rounded">
  <div class="card-header bg-dark text-white">
    <h4 class="card-title text-white m-0">
      <i class="fas fa-images mr-2"></i>
      Recent Uploads
    </h4>
  </div>
  <div class="card-body">
    <div class="row">
      <% viewModel.images.forEach( image => { %>
      <div class="col-md-6 col-lg-4 text-center mb-3">
        <a href="/images/<%= image.uniqueId %>">
          <img src="/public/upload/<%= image.filename %>" alt="<%= image.title %>" class="w-100 h-100">
        </a>
      </div>
      <% }) %>
    </div>
  </div>
</div>