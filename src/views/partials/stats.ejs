<div class="card mt-4 mt-md-0 shadow-sm rounded">
  <div class="card-header bg-dark text-white">
    <h4 class="m-0"><i class="fas fa-chart-bar"></i>
      Stats
    </h4>
  </div>
  <div class="card-body">
    <p><i class="fas fa-images mr-2"></i> Total Images: <%= viewModel.sidebar.stats.totalImages %> </p>
    <p><i class="fas fa-comments mr-2"></i> Total Comments: <%= viewModel.sidebar.stats.totalComments %> </p>
    <p><i class="far fa-eye mr-2"></i> Total Views: <%= viewModel.sidebar.stats.totalViews %> </p>
    <p><i class="far fa-thumbs-up mr-2"></i> Total Likes: <%= viewModel.sidebar.stats.totalLikes %> </p>

  </div>
</div>